generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
} 

model Table {
  id        String   @id @default(cuid())
  number    Int      @unique
  name      String?  @unique
  qrCode    String   @unique
  isActive  Boolean  @default(true)
  orders    Order[]
}
model StateInfo {
  id           String   @id @default(cuid())
  restaurantName String
  latitude     Float    // Restoranın en dairəsi (məs: 40.4093)
  longitude    Float    // Restoranın uzunluq dairəsi (məs: 49.8671)
  allowedRadius Int     // İcazə verilən məsafə (metr ilə, məs: 100)
  updatedAt    DateTime @updatedAt
}
model Category {
  id       String    @id @default(cuid())
  name     String
  products Product[]
}

model Statistic {
  id           String   @id @default(cuid())
  totalOrders  Int      @default(0)
  totalRevenue Float    @default(0.0)
  totalProfit  Float    @default(0.0)
  // totalProfit təkrarlandığı üçün birini sildik
  date         DateTime @default(now()) @unique // Hesabatın hansı günə aid olduğunu bilmək üçün
}

model Product {
  id          String      @id @default(cuid())
  name        String
  description String?
  price       Float
  purchasePrice Float
  image       String?
  category    Category    @relation(fields: [categoryId], references: [id])
  categoryId  String
  inStock     Boolean     @default(true)
  orderItems  OrderItem[]
}

model Order {
  id         String      @id @default(cuid())
  table      Table       @relation(fields: [tableId], references: [id])
  tableId    String
  status     String      @default("PENDING") // Enum not fully supported in simple sqlite setup sometimes, sticking to string for safety or simple enum
  createdAt  DateTime    @default(now())
  orderItems OrderItem[]
}

model OrderItem {
  id        String  @id @default(cuid())
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   String
  product   Product @relation(fields: [productId], references: [id])
  productId String
  quantity  Int
}
